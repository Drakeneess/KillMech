@model KillMech.Models.Categorium

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<!-- Título con estilos de Bootstrap -->
<h1 class="text-center mt-3" style="color: #e74c3c; font-size: 2.5em; font-weight: bold; text-shadow: 2px 2px 4px #000000;">
    @ViewData["Title"]
</h1>

<h3>¿Estás seguro que deseas eliminar esta categoría?</h3>
<div>
    <h4>Categoría</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </form>
</div>

   
