@model KillMech.Models.Jugador

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Jugador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoJugador" class="control-label">Código del Jugador</label>
                <input asp-for="CodigoJugador" class="form-control" />
                <span asp-validation-for="CodigoJugador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" the="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoJugado" class="control-label">Tiempo Jugado</label>
                <input asp-for="TiempoJugado" class="form-control" />
                <span asp-validation-for="TiempoJugado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
